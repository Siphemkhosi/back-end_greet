<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/styles.css" />
    <link rel="stylesheet" href="css/bootstrap.css" />
    <link rel="stylesheet" href="css/bootstrap-grid.css" />
    <title>My web development learning page</title>
  </head>

  <body>

   <div class="actions">
    <form action="/greet" method="POST">
 <h1>Greeting App</h1>
        {{#if messages.info}}
<div style="text-align:center;" class="entry">
    <h2> {{messages.info}}</h2>
</div>
{{/if}}
      <div class="sortingForm">
        <label class="name" for="Name">Name</label>
        <input
          class="inputname"
          {{!-- pattern="[a-zA-Z'-'\s]*" --}}
          id="input"
          type="text"
          name="name"
          placeholder="enter your name"
          {{!-- value="" --}}
        />
        <span class="greeted_count count">{{counter}}</span>
      </div>
      <div class="languages">
        <input type="radio" name="radioButn" value="xhosa" />IsiXhosa
        <input type="radio" name="radioButn" value="english" />English
        <input type="radio" name="radioButn" value="sisotho" />Sisotho
      </div>
      <br />
      <div class="butns">
        <button type="submit">Greet</button>
        <button type="reset" class="reset">Reset</button>
      </div>
      <p class="response" style="text-align:center;">{{userName}} </p>
    </form>
     {{!-- <span role="alert" id="nameError" aria-hidden="true">
   {{messages.info}} --}}
  </span>
    
    <div class="storage">
      <ul class="list_names">
      
      </ul>
    </div>
    </div>
    <script src="./app.fact.js"></script>
    <script src="./js/app.dom.js"></script>
  </body>

</html>